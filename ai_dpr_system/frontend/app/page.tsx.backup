'use client'

import { useState } from 'react'
import Link from 'next/link'
import Image from 'next/image'
import { Button } from '@/components/ui/button'
import Logo from '@/components/ui/logo'
import { useAuth } from '@/lib/auth/auth-provider'
import { useRouter } from 'next/navigation'

export default function LandingPage() {
  const { isAuthenticated } = useAuth()
  const router = useRouter()
  const [isMenuOpen, setIsMenuOpen] = useState(false)
  
  const features = [
    {
      title: 'AI Risk Assessment',
      description: 'Advanced AI algorithms analyze project parameters to identify potential risks.',
      icon: (
        <svg className="h-6 w-6 text-dpr-ai-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      )
    },
    {
      title: 'Detailed Analytics',
      description: 'Comprehensive reports with actionable insights for informed decision making.',
      icon: (
        <svg className="h-6 w-6 text-dpr-ai-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
      )
    },
    {
      title: 'Document Processing',
      description: 'Automated scanning of DPRs to extract key information and identify issues.',
      icon: (
        <svg className="h-6 w-6 text-dpr-ai-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      )
    },
    {
      title: 'Collaborative Review',
      description: 'Tools for multiple stakeholders to review and comment on project details.',
      icon: (
        <svg className="h-6 w-6 text-dpr-ai-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
        </svg>
      )
    }
  ]

  return (
    <div className="min-h-screen flex flex-col">
      {/* Header/Navigation */}
      <header className="bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800">
        <div className="container mx-auto px-4">
          <div className="flex justify-between items-center py-4">
            <Logo size="lg" />
            
            {/* Desktop Navigation */}
            <nav className="hidden md:flex items-center space-x-8">
              <Link href="#features" className="text-slate-600 hover:text-dpr-ai-blue transition-colors">
                Features
              </Link>
              <Link href="#how-it-works" className="text-slate-600 hover:text-dpr-ai-blue transition-colors">
                How it Works
              </Link>
              <Link href="/about" className="text-slate-600 hover:text-dpr-ai-blue transition-colors">
                About
              </Link>
              <Link href="/faqs" className="text-slate-600 hover:text-dpr-ai-blue transition-colors">
                FAQs
              </Link>
            </nav>
            
            {/* Mobile menu button */}
            <div className="md:hidden">
              <button
                onClick={() => setIsMenuOpen(!isMenuOpen)}
                className="text-slate-600 hover:text-dpr-ai-blue focus:outline-none"
              >
                <svg className="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  {isMenuOpen ? (
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                  ) : (
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6h16M4 12h16M4 18h16" />
                  )}
                </svg>
              </button>
            </div>
            
            {/* Auth buttons */}
            <div className="hidden md:flex items-center space-x-4">
              {isAuthenticated ? (
                <Button 
                  className="bg-dpr-ai-blue hover:bg-dpr-ai-blue/90 transition-colors"
                  onClick={() => router.push('/dashboard')}
                >
                  Dashboard
                </Button>
              ) : (
                <>
                  <Button 
                    variant="ghost"
                    className="text-slate-600 hover:text-dpr-ai-blue transition-colors"
                    onClick={() => router.push('/auth/login')}
                  >
                    Login
                  </Button>
                  <Button 
                    className="bg-dpr-ai-blue hover:bg-dpr-ai-blue/90 transition-colors"
                    onClick={() => router.push('/auth/register')}
                  >
                    Register
                  </Button>
                </>
              )}
            </div>
          </div>
          
          {/* Mobile menu */}
          {isMenuOpen && (
            <div className="md:hidden py-4 border-t border-slate-200 dark:border-slate-800">
              <nav className="flex flex-col space-y-4">
                <Link 
                  href="#features" 
                  className="text-slate-600 hover:text-dpr-ai-blue transition-colors"
                  onClick={() => setIsMenuOpen(false)}
                >
                  Features
                </Link>
                <Link 
                  href="#how-it-works" 
                  className="text-slate-600 hover:text-dpr-ai-blue transition-colors"
                  onClick={() => setIsMenuOpen(false)}
                >
                  How it Works
                </Link>
                <Link 
                  href="/about" 
                  className="text-slate-600 hover:text-dpr-ai-blue transition-colors"
                  onClick={() => setIsMenuOpen(false)}
                >
                  About
                </Link>
                <Link 
                  href="/faqs" 
                  className="text-slate-600 hover:text-dpr-ai-blue transition-colors"
                  onClick={() => setIsMenuOpen(false)}
                >
                  FAQs
                </Link>
                
                <div className="flex flex-col space-y-2 pt-4 border-t border-slate-200 dark:border-slate-800">
                  {isAuthenticated ? (
                    <Button 
                      className="bg-dpr-ai-blue hover:bg-dpr-ai-blue/90 transition-colors"
                      onClick={() => {
                        router.push('/dashboard')
                        setIsMenuOpen(false)
                      }}
                    >
                      Dashboard
                    </Button>
                  ) : (
                    <>
                      <Button 
                        variant="outline"
                        className="border-dpr-ai-blue text-dpr-ai-blue hover:bg-dpr-ai-blue/5 transition-colors"
                        onClick={() => {
                          router.push('/auth/login')
                          setIsMenuOpen(false)
                        }}
                      >
                        Login
                      </Button>
                      <Button 
                        className="bg-dpr-ai-blue hover:bg-dpr-ai-blue/90 transition-colors"
                        onClick={() => {
                          router.push('/auth/register')
                          setIsMenuOpen(false)
                        }}
                      >
                        Register
                      </Button>
                    </>
                  )}
                </div>
              </nav>
            </div>
          )}
        </div>
      </header>

      {/* Hero Section */}
      <section className="relative bg-gradient-to-br from-dpr-ai-white to-blue-50 dark:from-slate-900 dark:to-slate-800 py-20 overflow-hidden">
        {/* Background pattern */}
        <div className="absolute inset-0 z-0 opacity-10">
          <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
                <path d="M0 10 L40 10 M10 0 L10 40" fill="none" stroke="currentColor" strokeWidth="0.5" />
              </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#grid)" />
          </svg>
        </div>

        <div className="container mx-auto px-4 relative z-10">
          <div className="flex flex-col lg:flex-row items-center justify-between gap-12">
            <div className="lg:w-1/2 text-center lg:text-left">
              <h1 className="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 dark:text-white mb-6 leading-tight">
                <span className="text-dpr-ai-blue">AI-Powered</span> DPR Risk Assessment Platform
              </h1>
              <p className="text-xl text-slate-700 dark:text-slate-300 mb-8 max-w-2xl mx-auto lg:mx-0">
                Evaluate infrastructure project risks using advanced AI models. Streamline the DPR review process with intelligent analysis and comprehensive reporting.
              </p>
              <div className="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                <Button 
                  size="lg" 
                  className="bg-dpr-ai-blue hover:bg-dpr-ai-blue/90 text-white px-8 py-6 text-lg"
                  onClick={() => router.push(isAuthenticated ? '/dashboard' : '/auth/register')}
                >
                  {isAuthenticated ? 'Go to Dashboard' : 'Get Started'}
                </Button>
                <Button 
                  size="lg" 
                  variant="outline" 
                  className="border-dpr-ai-blue text-dpr-ai-blue hover:bg-dpr-ai-blue/5 px-8 py-6 text-lg"
                  onClick={() => router.push('/how-it-works')}
                >
                  Learn More
                </Button>
              </div>
            </div>
            <div className="lg:w-1/2">
              <div className="relative bg-white dark:bg-slate-800 rounded-lg p-2 shadow-lg backdrop-blur-sm bg-opacity-70 dark:bg-opacity-70">
                <div className="absolute inset-0 rounded-lg bg-gradient-to-br from-blue-500/10 to-green-500/10 backdrop-blur-sm -z-10"></div>
                <Image
                  src="/assets/hero-image.png"
                  alt="DPR-AI Platform Dashboard Preview"
                  width={600}
                  height={400}
                  className="rounded shadow-md w-full h-auto"
                />
              </div>
            </div>
          </div>
        </div>
      </section>

      {/* Features Section */}
      <section id="features" className="py-20 bg-white dark:bg-slate-900">
        <div className="container mx-auto px-4">
          <div className="text-center mb-16">
            <h2 className="text-3xl font-bold text-slate-900 dark:text-white mb-4">Key Features</h2>
            <p className="text-xl text-slate-700 dark:text-slate-300 max-w-2xl mx-auto">
              Our platform offers a comprehensive suite of tools to streamline the DPR evaluation process
            </p>
          </div>
          
          <div className="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            {features.map((feature, index) => (
              <div 
                key={index} 
                className="bg-slate-50 dark:bg-slate-800 rounded-xl p-6 transition-all duration-300 hover:shadow-md"
              >
                <div className="rounded-full bg-dpr-ai-blue/10 p-3 inline-block mb-4">
                  {feature.icon}
                </div>
                <h3 className="text-xl font-semibold mb-3 text-slate-900 dark:text-white">
                  {feature.title}
                </h3>
                <p className="text-slate-700 dark:text-slate-300">
                  {feature.description}
                </p>
              </div>
            ))}
          </div>
        </div>
      </section>

      {/* How it Works */}
      <section id="how-it-works" className="py-20 bg-slate-50 dark:bg-slate-800">
        <div className="container mx-auto px-4">
          <div className="text-center mb-16">
            <h2 className="text-3xl font-bold text-slate-900 dark:text-white mb-4">How It Works</h2>
            <p className="text-xl text-slate-700 dark:text-slate-300 max-w-2xl mx-auto">
              A simple but powerful workflow to evaluate and improve your Detailed Project Reports
            </p>
          </div>
          
          <div className="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
            <div className="text-center">
              <div className="rounded-full bg-dpr-ai-blue text-white text-xl font-semibold h-12 w-12 flex items-center justify-center mx-auto mb-6">1</div>
              <h3 className="text-xl font-semibold mb-3 text-slate-900 dark:text-white">Upload DPR</h3>
              <p className="text-slate-700 dark:text-slate-300">
                Submit your Detailed Project Report through our secure platform
              </p>
            </div>
            <div className="text-center">
              <div className="rounded-full bg-dpr-ai-blue text-white text-xl font-semibold h-12 w-12 flex items-center justify-center mx-auto mb-6">2</div>
              <h3 className="text-xl font-semibold mb-3 text-slate-900 dark:text-white">AI Analysis</h3>
              <p className="text-slate-700 dark:text-slate-300">
                Our advanced AI models analyze the report and identify potential risks
              </p>
            </div>
            <div className="text-center">
              <div className="rounded-full bg-dpr-ai-blue text-white text-xl font-semibold h-12 w-12 flex items-center justify-center mx-auto mb-6">3</div>
              <h3 className="text-xl font-semibold mb-3 text-slate-900 dark:text-white">Review Results</h3>
              <p className="text-slate-700 dark:text-slate-300">
                Receive detailed assessment with actionable insights and recommendations
              </p>
            </div>
          </div>
        </div>
      </section>

      {/* CTA Section */}
      <section className="py-20 bg-dpr-ai-blue text-white">
        <div className="container mx-auto px-4 text-center">
          <h2 className="text-3xl font-bold mb-6">Ready to optimize your infrastructure projects?</h2>
          <p className="text-xl mb-8 max-w-2xl mx-auto opacity-90">
            Join government agencies across the country who are using DPR-AI to improve project outcomes
          </p>
          <Button 
            size="lg" 
            variant="secondary"
            className="bg-white text-dpr-ai-blue hover:bg-white/90 px-8 py-6 text-lg"
            onClick={() => router.push(isAuthenticated ? '/dashboard' : '/auth/register')}
          >
            {isAuthenticated ? 'Access Dashboard' : 'Get Started Now'}
          </Button>
        </div>
      </section>

      {/* Footer */}
      <footer className="bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800 py-12">
        <div className="container mx-auto px-4">
          <div className="grid md:grid-cols-4 gap-8">
            <div>
              <Logo size="md" />
              <p className="mt-4 text-slate-600 dark:text-slate-400">
                Empowering better infrastructure development through AI-driven risk assessment
              </p>
            </div>
            <div>
              <h3 className="text-lg font-semibold mb-4 text-slate-900 dark:text-white">Quick Links</h3>
              <ul className="space-y-2">
                <li>
                  <Link href="/about" className="text-slate-600 dark:text-slate-400 hover:text-dpr-ai-blue dark:hover:text-dpr-ai-blue transition-colors">
                    About Us
                  </Link>
                </li>
                <li>
                  <Link href="/faqs" className="text-slate-600 dark:text-slate-400 hover:text-dpr-ai-blue dark:hover:text-dpr-ai-blue transition-colors">
                    FAQs
                  </Link>
                </li>
                <li>
                  <Link href="/user-manual" className="text-slate-600 dark:text-slate-400 hover:text-dpr-ai-blue dark:hover:text-dpr-ai-blue transition-colors">
                    User Manual
                  </Link>
                </li>
              </ul>
            </div>
            <div>
              <h3 className="text-lg font-semibold mb-4 text-slate-900 dark:text-white">Legal</h3>
              <ul className="space-y-2">
                <li>
                  <Link href="/privacy-policy" className="text-slate-600 dark:text-slate-400 hover:text-dpr-ai-blue dark:hover:text-dpr-ai-blue transition-colors">
                    Privacy Policy
                  </Link>
                </li>
                <li>
                  <Link href="/terms-of-service" className="text-slate-600 dark:text-slate-400 hover:text-dpr-ai-blue dark:hover:text-dpr-ai-blue transition-colors">
                    Terms of Service
                  </Link>
                </li>
                <li>
                  <Link href="/accessibility" className="text-slate-600 dark:text-slate-400 hover:text-dpr-ai-blue dark:hover:text-dpr-ai-blue transition-colors">
                    Accessibility
                  </Link>
                </li>
              </ul>
            </div>
            <div>
              <h3 className="text-lg font-semibold mb-4 text-slate-900 dark:text-white">Contact</h3>
              <address className="not-italic text-slate-600 dark:text-slate-400">
                <p>Ministry of Development of North Eastern Region</p>
                <p>Government of India</p>
                <p className="mt-4">Email: support@dprai.gov.in</p>
              </address>
            </div>
          </div>
          <div className="mt-12 pt-8 border-t border-slate-200 dark:border-slate-800 text-center text-slate-600 dark:text-slate-400">
            <p>&copy; {new Date().getFullYear()} Ministry of Development of North Eastern Region. All rights reserved.</p>
          </div>
        </div>
      </footer>
    </div>
  )
}
